(defwidget time [] 
(box :halign "center" 
     :class "time" 
     :space-evenly "false"
(label 
    :halign "center"
    :text "${hour}  |  ")
(label 
    :halign "center"
    :text "${minute}  |  ")
(label 
    :halign "center"
    :text "${second}  ")))

;;Album literal which has the code from album extractor
(defwidget album []
(literal :content album))

(defwidget alb [] 
(box :class "image" 
     :halign "center" 
     :valign "center" 
(album)))

