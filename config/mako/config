# Mako notification daemon configuration
# Place this file at ~/.config/mako/config

# Basic Settings
max-history=100
sort=-time

# Positioning
anchor=top-center
margin=20
padding=15

# Dimensions
width=400
height=150
max-visible=5

# Colors - Dark theme with subtle accents
background-color=#1e1e2e
text-color=#cdd6f4
border-color=#89b4fa
progress-color=#89b4fa

# Typography
font=Inter 11
markup=1
format=<b>%s</b>\n%b

# Border and corner styling
border-size=2
border-radius=12

# Icons
max-icon-size=48
icon-path=/usr/share/icons/Papirus-Dark
icons=1

# Behavior
ignore-timeout=0
default-timeout=5000
group-by=app-name

# Animations and effects
layer=overlay
output=

# Urgency-based styling
[urgency=low]
background-color=#1e1e2e
text-color=#a6adc8
border-color=#45475a
default-timeout=3000

[urgency=normal]
